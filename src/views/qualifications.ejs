<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calificaciones - LearnStudy-Hub</title>
    <link rel="icon" type="image/png" href="/images/logo_sin_fondo.png">
    <link rel="stylesheet" href="/views/css/layout.css"> 
    <link rel="stylesheet" href="/views/css/qualifications.css">
    <script src="/views/javascript/layout.js" ></script>

</head>
<body>
    
    <div class="container">
        <% if(mensaje){ %>
                <div id="no-courses-msg" class="no-courses-card">
                    <div class="card-icon">
                        <i data-lucide="graduation-cap"></i>
                    </div>
                    <h2 class="card-title">Sin cursos inscritos o evaluaciones</h2>
                    <p class="card-text">
                        No se encontraron registros para este período. 
                        <strong>Debe inscribir cursos o registrar evaluaciones en este lapso académico para cargar calificaciones.</strong>
                    </p>
                    <div class="card-footer-line"></div>
                </div>
            <% } %>
        <div class="courses-container" id="courses-container">
            <!-- Los cursos se cargarán dinámicamente aquí -->
        </div>  

        <!-- Modal para mostrar evaluaciones del curso -->
        <div class="modal-overlay" id="course-modal">
            <div class="modal">
                <div class="modal-header">
                    <h2 class="modal-title" id="modal-course-name">Nombre del Curso</h2>
                    <button class="close-modal" id="close-modal">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="course-summary">
                        <div class="summary-item">
                            <div class="summary-value" id="modal-course-code">MAT-101</div>
                            <div class="summary-label">Código</div>
                        </div>
                        <div class="summary-item">
                            <div class="summary-value" id="modal-course-credits">4</div>
                            <div class="summary-label">Créditos</div>
                        </div>
                        <div class="summary-item">
                            <div class="summary-value" id="modal-course-grade">17.5</div>
                            <div class="summary-label">Promedio Actual</div>
                        </div>
                    </div>

                    <div id="evaluations-container">
                        <!-- Las evaluaciones se cargarán dinámicamente aquí -->
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal para agregar calificación -->
        <div class="grade-input-modal" id="grade-input-modal">
            <div class="grade-input-content">
                <h3 class="grade-input-title" id="grade-evaluation-name">Agregar Calificación</h3>
                <form class="grade-form" id="grade-form">
                    <div class="form-group">
                        <label for="grade-input">Calificación (0-20 puntos)</label>
                        <input type="number" id="grade-input" min="0" max="20" step="0.01" required>
                    </div>
                    <div class="form-actions">
                        <button type="button" class="btn btn-secondary" id="cancel-grade-btn">Cancelar</button>
                        <button type="submit" class="btn btn-primary">Guardar Calificación</button>
                    </div>
                </form>
            </div>
        </div>

    </div>

    <script>
        // Datos de ejemplo basados en la estructura de base de datos
        // 1. Cargamos y limpiamos studentCourses (convertimos promedio a número)
        const studentCourses = (<%- JSON.stringify(cursos) %>).map(course => ({
            ...course,
            promedio: Number(course.promedio) || 0 // Lo convertimos aquí una sola vez
        }));

        // 2. Cargamos evaluaciones y las agrupamos limpiando la calificación
        const evaluacionesRaw = <%- JSON.stringify(evaluaciones) %>;

        const courseEvaluations = evaluacionesRaw.reduce((acc, row) => {
            if (!acc[row.id_curso]) acc[row.id_curso] = [];
            
            acc[row.id_curso].push({
                id_evaluacion: row.id_evaluacion,
                descripcion: row.descripcion,
                porcentaje: Number(row.porcentaje) || 0,
                corte: row.corte,
                // Limpiamos la calificación aquí también
                calificacion: row.calificacion !== null ? Number(row.calificacion) : null
            });
            return acc;
        }, {});
    </script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
    <script src="/views/javascript/qualifications.js" ></script>
</body>
</html>